<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_corner_search_box_main"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_search_box_login"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_myinfo_login"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登入"
                android:textSize="23sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_myinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_myinfo_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/default_icon"
                android:layout_gravity="left"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/tv_myinfo_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xzq"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>